{
  "name": "i18n-copilot",
  "version": "0.1.0",
  "description": "A Node.js utility that watches translation files for key changes and automatically translates them using configurable LLM providers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "i18n-copilot": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "node esbuild.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:runner": "pnpm run build && node dist/core/__tests__/test-runner.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "start": "node dist/cli/cli.js",
    "cli": "node dist/cli/cli.js"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "localization",
    "ai",
    "llm",
    "watcher",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "openai": "^4.20.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
