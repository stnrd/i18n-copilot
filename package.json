{
  "name": "translation-watcher-ai",
  "version": "0.1.0",
  "description": "A Node.js utility that watches translation files for new keys and automatically translates them using configurable LLM providers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "translation-watcher": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:runner": "pnpm run build && node dist/core/__tests__/test-runner.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "start": "node dist/cli/index.js",
    "cli": "node dist/cli/index.js"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "localization",
    "ai",
    "llm",
    "watcher",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "openai": "^4.20.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
